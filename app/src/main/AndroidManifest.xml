<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schoolapp.schoolapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListOfStudentsActivity"
            android:label="@string/students"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListOfClassesActivity"
            android:label="@string/classes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListOfCoursesActivity"
            android:label="@string/course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListOfTeachersActivity"
            android:label="@string/teachers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListOfModulesActivity"
            android:label="@string/modules"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddStudentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LanguageActivity"
            android:label="@string/lang"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AboutActivity"></activity>
        <activity
            android:name=".DetailStudentActivity"
            android:label="@string/details"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>